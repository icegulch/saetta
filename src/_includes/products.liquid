---
layout: base
---

<section class="section">
  <div class="container spacing spacing--products fade-in-all">
    {% for product in products %}
      <div class="even-columns even-columns--{% cycle 'default', 'reversed' %}">
        <figure>
          <img src="{{ product.photo }}">
        </figure>
        <article class="flow-content">
          <h2>
            {{ product.title }}
          </h2>
          {{ product.description | markdownify }}
          <div class="readmore">
            <a href="{{ site.domain }}{{ product.datasheet }}" target="_blank">
              Datasheet
              <svg>
                <use xlink:href='#r-arrow' />
              </svg>
            </a>
          </div>
        </article>
      </div>
    {% endfor %}
  </div>
</section>