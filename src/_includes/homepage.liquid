---
layout: base
---
  
<section class="section section--home pattern-bg">
  <div class="container">
    <article class="home-hero">
      <img class="fade-in-left" src="{{ prefix.optim }}{{ hero_image }}" alt="Photo of Saetta Labs's oscillator" loading="lazy">
      <hgroup class="fade-in-right">
        <h1 class="page-title" style="margin-bottom:0.5rem;">
          {{ hero_heading }}
        </h1>
        <p>
          {{ hero_subheading }}
        </p>
        <div class="homepage-ctas">
          <a href="/library/" class="btn btn--secondary">
            Publications
            <svg>
              <use xlink:href='#r-arrow' />
            </svg>
          </a>
          <a href="/products/" class="btn btn--primary">
            Datasheets
            <svg>
              <use xlink:href='#r-arrow' />
            </svg>
          </a>
        </div>
      </hgroup>
    </article>
  </div>
</section>

<section class="section home-about">
  <div class="container container--squeezed">
    <div class="about-decor">
      <svg>
        <use xlink:href='#bolt' />
      </svg>
    </div>
    <article class="spacing spacing--content">
      {{ about_blurb | markdownify }}
      <a href="/about/" class="readmore">
        <span>
          Read more
        </span>
        <svg>
          <use xlink:href='#r-arrow' />
        </svg>
      </a>
    </article>
  </div>
</section>
