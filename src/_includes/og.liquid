<meta property="og:site_name" content="{{ meta.seo_title }}">
<meta property="og:url" content="{{ site.domain }}{{ page.url }}">
<meta property="og:title" content="{% unless page.fileSlug == 'homepage' or seo_title.length == 0 %}{{ seo_title }} | {% endunless %}{{ meta.seo_title }}">
<meta property="og:description" content="{% if seo_desc %}{{ seo_desc | escape }}{% else %}{{ meta.seo_description }}{% endif %}">
<meta property="og:image" content="{{ site.domain }}{{ prefix.opengraph }}{{ meta.og_img }}">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">