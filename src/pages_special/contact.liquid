---
permalink: /contact/index.html
title: Contact
---

<div class="container container--squeezed fade-in-all">
  <article class="flow-content">
    {{ contactpage.blurb | markdownify }}
  </article>
  <form
    class="contact-form"
    name="contact"
    netlify-honeypot="fu"
    action="/contact/thank-you/"
    netlify>
    <div hidden>
      <label>Donâ€™t fill this out: <input name="fu"></label>
    </div>
    <div class="form-field">
      <label for="name">
        Name
      </label>
      <input
        id="name"
        class="form-control"
        type="text"
        name="name">
    </div>
    <div class="form-field">
      <label for="email">
        Email
      </label>
      <input
        id="email"
        class="form-control"
        type="email"
        name="email">
    </div>
    <div class="form-field">
      <label for="message">
        Your message
      </label>
      <textarea
        id="message"
        class="form-control"
        name="message"
        rows="10"></textarea>
    </div>
    <button class="btn btn--primary btn--end">
      Send
    </button>
  </form>
</div>
